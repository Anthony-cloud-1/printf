#include "main.h"

/**
 * print_u - prints an unsigned in decimal notation
 * @u: unsigned int
 *
 * Return: number of digits printed
 */
int print_u(va_list u)
{
	unsigned int arr[10];
	unsigned int i, j, n, sum;
	int count;

	n = va_arg(u, unsigned int);
	m = 1000000000; /* (10 ^ 9) */
	arr[0] = n / j;
	for (i = 1; i < 10; i++)
	{
		j /= 10;
		arr[i] = (n / j) % 10;
	}
	for (i = 0, sum = 0, count = 0; i < 10; i++)
	{
		sum += arr[i];
		if (sum || i == 9)
		{
			_putchar('0' + arr[i]);
			count++;
		}
	}
	return (count);
}

/**
 * print_o - takes an unsigned int and prints it in octal notation
 * @o: unsigned int to print
 *
 * Return: number of digits printed
 */
int print_o(va_list o)
{
	unsigned int arr[11];
	unsigned int i, j, n, sum;
	int count;

	n = va_arg(o, unsigned int);
	j = 1073741824; /* (8 ^ 10) */
	arr[0] = n / j;
	for (i = 1; i < 11; i++)
	{
		j /= 8;
		arr[i] = (n / j) % 8;
	}
	for (i = 0, sum = 0, count = 0; i < 11; i++)
	{
		sum += arr[i];
		if (sum || i == 10)
		{
			_putchar('0' + arr[i]);
			count++;
		}
	}
	return (count);
}

/**
 * print_b - takes an unsigned int and prints it in binary notation
 * @b: unsigned in to print
 *
 * Return: number of digits printed
 */
int print_b(va_list b)
{
	unsigned int n, j, i, sum;
	unsigned int arr[32];
	int count;

	n = va_arg(b, unsigned int);
	j = 2147483648; /* (2 ^ 31) */
	arr[0] = n / j;
	for (i = 1; i < 32; i++)
	{
		j /= 2;
		arr[i] = (n / j) % 2;
	}
	for (i = 0, sum = 0, count = 0; i < 32; i++)
	{
		sum += arr[i];
		if (sum || i == 31)
		{
			_putchar('0' + arr[i]);
			count++;
		}
	}
	return (count);
}
